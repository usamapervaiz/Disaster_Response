<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nasaprojects.disasterresponse.MainActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00067b">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Signup"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="33dp"
                    android:gravity="center"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/alertsignup"
                android:textColor="#f00"
                android:layout_gravity="center_horizontal"
                 />


            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="First Name :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/firstname"
                android:layout_marginTop="2dp"
                android:hint="First Name"
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Last Name :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/lastname"
                android:layout_marginTop="2dp"
                android:hint="Last Name"
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Email :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/emaillogin"
                android:layout_marginTop="2dp"
                android:hint="Email "
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Password :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passlogin"
                android:layout_marginTop="2dp"
                android:hint="Password"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Confirm Password :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/Passconfirm"
                android:hint="Confirm Password"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Hospital Name :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/hospitalname"
                android:layout_marginTop="2dp"
                android:hint="Hospital Name"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Hospital ID :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/hospitalid"
                android:layout_marginTop="2dp"
                android:hint="Hospital ID"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Birthday Date :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:id="@+id/birthdaydaysignup"
                android:layout_marginTop="2dp"
                android:hint="Birthday Date "
                android:inputType="date"
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Gender :"
                android:textColor="#520000" />
            <RadioGroup
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:id="@+id/gendersignup">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>


            <TextView
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Phone Number :"
                android:textColor="#520000" />
            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:id="@+id/phonenumber"
                android:layout_marginTop="2dp"
                android:hint="Phone Number "
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:id="@+id/signup"
                android:layout_marginTop="18dp"
                android:background="#686bb2"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:layout_marginTop="18dp"
                android:background="#66edef"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
